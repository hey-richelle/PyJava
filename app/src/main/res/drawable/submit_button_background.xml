<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Set the background color when the button is pressed -->
            <corners android:radius="8dp" /> <!-- Set the corner radius for rounded corners -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FF00" /> <!-- Set the default background color -->
            <corners android:radius="8dp" /> <!-- Set the corner radius for rounded corners -->
        </shape>
    </item>
</selector>