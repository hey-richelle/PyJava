<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background4"
    tools:context=".Activity.announce">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_person_24"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />


        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            app:fontFamily="@font/century_gothic"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileImageView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Name"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tex1"
            android:layout_below="@+id/text7"
            app:fontFamily="@font/century_gothic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/titleTextView"
                app:fontFamily="@font/century_gothic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title of Forum"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@+id/tex1"
            android:id="@+id/tex2"
            app:fontFamily="@font/century_gothic"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contentEditText"
                app:fontFamily="@font/century_gothic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="forum content"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tex2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:text="Upload image"
            android:textStyle="bold"
            app:fontFamily="@font/century_gothic" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_pick"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/text4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_baseline_image_24"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />
        <Button
            android:id="@+id/saveButton"
            android:layout_below="@+id/image_pick"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="35dp"
            app:fontFamily="@font/century_gothic"
            android:layout_centerHorizontal="true"
            android:background="@drawable/oblong_button"
            android:text="Upload" />

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
