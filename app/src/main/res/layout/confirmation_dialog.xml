<?xml version="1.0" encoding="utf-8"?>
<!-- confirmation_dialog.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="215dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Select the score to reset" />

    <Button
        android:id="@+id/btnResetEasyScore"
        android:layout_width="215dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:layout_height="wrap_content"
        android:text="Java Easy score" />

    <Button
        android:id="@+id/btnResetNormalScore"
        android:layout_width="215dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:layout_height="wrap_content"
        android:text="Java Normal score" />

    <Button
        android:id="@+id/btnResetHardScore"
        android:layout_width="215dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:layout_height="wrap_content"
        android:text="Java Hard score" />


    <Button
        android:id="@+id/btnResetAll"
        android:layout_width="215dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:layout_height="wrap_content"
        android:text="Reset all scores" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="215dp"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Cancel" />
</LinearLayout>
