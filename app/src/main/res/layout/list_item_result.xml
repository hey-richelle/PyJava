<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <ImageView
        android:id="@+id/resultImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop" />
    <ImageView
        android:id="@+id/studentImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/studentImageView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/easyScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTextView"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/normalScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/easyScoreTextView"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/hardScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/normalScoreTextView"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/normalScoreTextView"
        android:textSize="14sp" />
</RelativeLayout>
