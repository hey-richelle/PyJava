<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#606C5D"
    android:gravity="center"
    tools:context=".Activity.deletequiz">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Question Categories:"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_question_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Delete question category"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_delete_question"
        android:layout_width="300dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:icon="@drawable/ic_baseline_restore_from_trash_24"
        android:layout_height="wrap_content"
        android:text="Delete Question" />

</LinearLayout>