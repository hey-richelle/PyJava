<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutPrompt"
    android:padding="10dp"
    android:layout_gravity="center"
    android:background="@drawable/gradient_background7">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo_java"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:fontFamily="@font/century_gothic"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Please enter recovery email address"/>


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColorHint="@color/black"
            app:fontFamily="@font/century_gothic"
            android:layout_height="wrap_content"
            android:hint="Email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/forgot_pass"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                app:fontFamily="@font/century_gothic"
                android:drawableStart="@drawable/ic_baseline_person_27"
                android:drawablePadding="20dp"
                android:background="@android:color/transparent"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</LinearLayout>
