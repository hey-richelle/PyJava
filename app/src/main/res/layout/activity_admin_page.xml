<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@drawable/gradient_background6"
    tools:context=".Activity.Admin_page">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/card_container"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/horn"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/banner"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:elevation="5dp"
                        android:layout_marginLeft="-5dp"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/horn"/>

                    <TextView
                        android:id="@+id/tv_morning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dp"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        app:fontFamily="@font/century_gothic"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:text="Good Morning Admin"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/textstart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/horn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:text="Subject modules upload"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/century_gothic" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/spinner23"
                    android:layout_below="@+id/textstart"
                    android:layout_centerHorizontal="true"
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    app:cardElevation="10dp"
                    android:padding="5dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="20dp">


                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="80dp"
                        android:background="@drawable/gradient_background4">

                        <Spinner
                            android:id="@+id/spinnerposition"
                            android:layout_width="250dp"
                            android:layout_height="80dp"
                            android:textSize="22dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textstart2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinner23"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Check modules"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/century_gothic" />


                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/textstart2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/archives"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_marginRight="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_background4"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/archive_lottie"
                                android:layout_width="200dp"
                                android:layout_height="65dp"
                                android:elevation="5dp"
                                app:lottie_loop="true"
                                app:lottie_autoPlay="true"
                                app:lottie_rawRes="@raw/archive2" />

                            <TextView
                                android:id="@+id/text23"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Java Archive"
                                app:fontFamily="@font/century_gothic"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/archive_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                app:fontFamily="@font/century_gothic"
                                android:text="0"
                                android:textColor="#BF0606"
                                android:textSize="20dp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/arjay31"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_background4"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/java_lottie"
                                android:layout_width="200dp"
                                android:layout_height="65dp"
                                android:elevation="5dp"
                                app:lottie_loop="true"
                                app:lottie_autoPlay="true"
                                app:lottie_rawRes="@raw/java_22" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:fontFamily="@font/century_gothic"
                                android:text="Java Modules"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/java"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:fontFamily="@font/century_gothic"
                                android:layout_marginTop="5dp"
                                android:text="0"
                                android:textColor="#BF0606"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/linear1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">



                    <androidx.cardview.widget.CardView
                        android:id="@+id/python_ahas"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_marginRight="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_background4"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/python_lottie24"
                                android:layout_width="200dp"
                                android:layout_height="65dp"
                                android:elevation="5dp"
                                app:lottie_loop="true"
                                app:lottie_autoPlay="true"
                                app:lottie_rawRes="@raw/archive2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:fontFamily="@font/century_gothic"
                                android:layout_marginTop="10dp"
                                android:text="Python Archive"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/archive_py"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                app:fontFamily="@font/century_gothic"
                                android:text="0"
                                android:textColor="#BF0606"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/arjay33"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_background4"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/python_lottie"
                                android:layout_width="200dp"
                                android:layout_height="65dp"
                                android:elevation="5dp"
                                app:lottie_loop="true"
                                app:lottie_autoPlay="true"
                                app:lottie_rawRes="@raw/python23" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:fontFamily="@font/century_gothic"
                                android:layout_marginTop="10dp"
                                android:text="Python Modules"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/python"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                app:fontFamily="@font/century_gothic"
                                android:text="0"
                                android:textColor="#BF0606"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/linear2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/arjay55"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_marginRight="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_background4"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/message_lottie"
                                android:layout_width="200dp"
                                android:layout_height="65dp"
                                android:elevation="5dp"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true"
                                app:lottie_rawRes="@raw/message" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="30dp"
                                android:text="Messages"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                app:fontFamily="@font/century_gothic" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/arjay56"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_background4"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="200dp"
                                android:layout_height="65dp"
                                android:elevation="5dp"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true"
                                app:lottie_rawRes="@raw/forum" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="30dp"
                                android:text="Forum"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                app:fontFamily="@font/century_gothic" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            style="@style/BottomNavigationTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/home_nav"
            app:elevation="10dp"
            app:itemIconTint="@android:color/black"
            app:itemTextColor="@android:color/black"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_admin" />
    </RelativeLayout>
 </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/activity_header3"
        app:menu="@menu/admin_menu"
        android:background="@drawable/gradient_background4"
        android:id="@+id/nav_view"
        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>